package ch06ex;

import java.util.Scanner;

public class Ex07test {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		int money = 1000;
		int drink = 0;

		while (true) {
			System.out.println("음료를 고르시오. (1:콜라(500), 2:사이다(300), 3:환타(200)):");
			drink = scanner.nextInt();

			if (drink == 1) {
				System.out.println("콜라삽니다.");
				if (money-500< 0) {
					System.out.println("잔액이모자랍니다");
					continue;
				}
				money -= 500;
				System.out.println("잔액은" + money + "입니다");
			} else if (drink == 2) {
				System.out.println("사이다삽니다.");

				if (money-300 < 0) {
					System.out.println("잔액이모자랍니다");
					continue;
				}
				money -= 300;
				System.out.println("잔액은" + money + "입니다");

			} else if (drink == 3) {
				System.out.println("환타삽니다.");

				if (money-200 <0) {
					System.out.println("잔액이모자랍니다");
					continue;
				}
				money -= 200;
				System.out.println("잔액은" + money + "입니다");
			} else {
				System.out.printf("잘못된 명령어를 입력하였습니다.%n");
			}

		}
	}

}
/*
 * 문제 1. while문을 사용해 자판기를 만드세요. 1: 콜라 (500원), 2: 사이다(300원), 3: 환타(200원) 잔액은
 * 1000원으로 설정하고 잔액이 부족하면 음료수를 살 수 없어야 합니다.
 */
