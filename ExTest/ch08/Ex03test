package com.lcomputerstudy.books.java.ch08.test;

public class Ex03test {

	public static void main(String[] args) {

	}

}

class Vehicle {
	int speed;
	int weight;

//	public Vehicle() {
//		this(120,1000);
//	}

	Vehicle(int speed, int weight) {
		this.speed = speed;
		this.weight = weight;
	}

	void run() {
		System.out.println("운전중");
	}

}

class Car extends Vehicle {
	int people;

	Car() {
		super(120, 1000);
		this.people = 4;
	}

	void go() {
		System.out.println("자동차가는중");
	}
}

class Tank extends Vehicle {
	int army;

	Tank() {
		super(100, 5000);
		this.army = 4;
	}

	void attack() {
		System.out.println("공격중");
	}
}

